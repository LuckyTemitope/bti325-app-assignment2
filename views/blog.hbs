<div class="row">
    <section class="main col-md-9">
        {{#if data.post}}
            <article>
                <h2>{{data.post.title}}</h2>


                <div class="frame">
                    <div class="mat">
                        <div class="art">
                            <img src="{{data.post.featureImage}}" alt="Feature Image" class="img-fluid">
                        </div>
                    </div>
                </div>

                <br /><br />
                {{#safeHTML data.post.body}}{{/safeHTML}}
                <br /><br />
                <p>Category: {{data.post.category}}</p>
                <p>Last Updated: {{data.post.postDate}}</p>
            </article>
        {{else}}
            <div class="col-md-12 text-center">
                <h2>{{data.message}}</h2>
                <p>Please try another Post / Category</p>
            </div>
        {{/if}}
    </section>
    
    
    <aside class="col-md-3">
        {{#if data.posts}}
            <h4>Posts</h4>
            <ul>
                {{#each data.posts}}
                    <li><a href="/blog/{{this.id}}?category={{../viewingCategory}}">{{this.title}}</a></li>
                {{/each}}
            </ul>
        {{/if}}

        {{#if data.categories}}
            <h4>Categories</h4>
            <ul>
                {{#each data.categories}}
                    <li><a href="/blog?category={{this.id}}">{{this.category}}</a></li>
                {{/each}}
            </ul>
        {{/if}}

    </aside>
</div>




